<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="225.0" prefWidth="400.0" style="-fx-border-color: darkgrey;" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.upv.inf.FXMLDetailsViewController">
   <children>
      <VBox prefHeight="225.0" prefWidth="400.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Name:">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="editName" editable="false" prefHeight="25.0" prefWidth="235.0">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Label text="Surname:">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="editSurname" editable="false" prefHeight="25.0" prefWidth="235.0">
                     <HBox.margin>
                        <Insets left="6.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Button fx:id="buttonOk" mnemonicParsing="false" onAction="#onActionButtonOk" prefHeight="25.0" prefWidth="75.0" text="OK" textAlignment="CENTER" />
                  <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onActionButtonOk" prefWidth="75.0" text="Cancel">
                     <HBox.margin>
                        <Insets left="25.0" right="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</Pane>
